<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.a27560.the_final_test.MainActivity"
        android:orientation="vertical"
        android:background="#cade6f">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="369dp"
            app:srcCompat="@drawable/mainback"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"/>

    <Button
            android:text="简单难度"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_min"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_red_dark"
            android:textSize="22sp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

    <Button
            android:text="中等难度"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_mid"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_dark"
            android:textSize="22sp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

    <Button
            android:text="困难难度"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_max"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_light"
            android:textSize="22sp"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

    <Button
            android:text="网络对战"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_internet"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:textSize="22sp"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

    <Button
            android:text="游戏帮助"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_help"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_green_dark"
            android:textSize="22sp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

    <Button
            android:text="退出游戏"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_exit"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_dark"
            android:textSize="22sp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"/>

    <Button
            android:text="开发者信息"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:id="@+id/Main_info"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_purple"
            android:textSize="22sp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="17dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="345dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/black">

        <TextView
                android:text="音量"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:id="@+id/Main_textView"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@android:color/white"/>

        <SeekBar
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:id="@+id/Main_seekBar"
                android:layout_weight="1"
                android:layout_gravity="clip_vertical"
                android:max="50"
                android:progress="50"/>
    </LinearLayout>

</LinearLayout>
